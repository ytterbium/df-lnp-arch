## arg 1:  the new package version
## arg 2:  the old package version
pre_upgrade() {
}

## arg 1:  the new package version
## arg 2:  the old package version
post_upgrade() {

    # backup 
    for user in $(ls /etc/$pkgname); do
        directory=$(cat $user)

        mv $directory /tmp/$pkgname-$2/$user/
        echo "Save $directory"

        # New installation
        su $user -c "cp -rn /opt/$pkgname/ \"$directory\""

        echo "Fresh installation in $directory"

        # Restore save
        cd /tmp/$pkgname-$2/$user/
        for file in $FILES_TO_SAVE; do
            if [ -e file ]
            then cp -r file "$directory/$file"
                echo "Restored $file"
            else echo "$file doesn't exist"
            fi
        done
    done


	# do something here
}

